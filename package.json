{
  "name": "react-shared-components",
  "version": "1.0.0",
  "description": "shared React components with TypeScript and Tailwind CSS",
  "type": "module",
  "main": "./dist/react-shared-components.umd.js",
  "module": "./dist/react-shared-components.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/react-shared-components.es.js",
      "require": "./dist/react-shared-components.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/react-shared-components.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "prepublishOnly": "npm run build",
    "preview": "vite preview"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.15",
    "@types/node": "^24.9.1",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "vite": "^7.0.5",
    "vite-plugin-dts": "^4.5.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dasari234/react-library.git"
  },
  "keywords": [
    "react",
    "typescript",
    "tailwind",
    "components",
    "hooks"
  ],
  "author": "Dasari",
  "license": "MIT"
}